﻿
@model CreateProductVM


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Product</h4>

                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                             <div class="form-group">
                                <label asp-for="MainPhoto">Main Image</label>
                                <input asp-for="MainPhoto" class="form-control" >
                                <span class="text-danger" asp-validation-for="MainPhoto"></span>
                            </div>
                              <div class="form-group">
                                <label asp-for="HoverPhoto" >Main Image</label>
                                <input asp-for="HoverPhoto" class="form-control" accept="image/*" >
                                <span class="text-danger" asp-validation-for="HoverPhoto"></span>
                            </div>
                              <div class="form-group">
                                <label asp-for="Photos">Additional Images</label>
                                <input asp-for="Photos" class="form-control" accept="image/*" >
                                <span class="text-danger" asp-validation-for="Photos"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Photo</label>
                                <input asp-for="Name" class="form-control" placeholder="Photo" accept="image/*">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Title</label>
                                <input asp-for="Price" class="form-control" placeholder="Title">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SKU">SubTitle</label>
                                <input asp-for="SKU" class="form-control" placeholder="SubTitle">
                                <span class="text-danger" asp-validation-for="SKU"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                                <select asp-for="CategoryId" class="form-control" >
                                  @foreach (Category category in ProductVM.Categories)
                                    {
                                          <option value="@category.Id">@category.Name</option>
                                    }
                                    <option disabled selected>Choose Category </option>
                                </select>
                                <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(ProductVM.Categories),nameof(Category.Id),nameof(Category.Name))">
                                       <option disabled selected>Choose Category </option>
                                </select>
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div
                             <div class="form-group">
                                <label asp-for="TagIds">Tags</label>
                                <select asp-for="CategoryId" class="form-control" >
                                  @foreach (Category category in ProductVM.Categories)
                                    {
                                          <option value="@category.Id">@category.Name</option>
                                    }
                                    <option disabled selected>Choose Category </option>
                                </select>
                                <select asp-for="TagIds" class="form-control" asp-items="new SelectList(ProductVM.Tags),nameof(Tag.Id),nameof(Tag.Name))">
                                       <option disabled selected>Choose Category </option>
                                </select>
                                <span class="text-danger" asp-validation-for="TagIds"></span>
                            </div
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>